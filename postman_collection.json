	"item": [
		{
			"name": "test all rover photo",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Получаем JSON-ответ сервера для дальнейшей обработки\r",
							"var jsonData = pm.response.json();\r",
							"// Обходим каждый элемент массива 'photos'\r",
							"jsonData.photos.forEach((photo,index) => {\r",
							"  // Test 1: Проверяем, что JSON ответ содержит ключ 'id' изображения и его значение является числом\r",
							"  pm.test(\"Ответ содержит ключ 'id'\", () => {\r",
							"    pm.expect(photo).to.have.property('id');\r",
							"    pm.expect(typeof photo.id).to.equal('number');\r",
							"    console.log(`ID фото: ${photo.id}, Индекс фото: ${index}`);\r",
							"  });\r",
							"  // Test 2: Проверяем наличие ключа со ссылкой на ресурс с изображением\r",
							"  pm.test(\"Ответ содержит ключ 'img_src'\", () => {\r",
							"    pm.expect(photo).to.have.property('img_src');\r",
							"    console.log(`Ссылка на фото: ${photo.img_src}`);\r",
							"  });\r",
							"  // Test 3: Проверяем валидность ссылки на изображение\r",
							"  pm.test(\"Ссылка на изображение является валидной\", () => {\r",
							"    pm.expect(photo.img_src).to.match(/^https?:\\/\\/\\S+/);\r",
							"    console.log(`Ссылка валидна`);\r",
							"    });\r",
							"  // Test 4: Проверяем доступность ресурса по ссылке\r",
							"  pm.test(\"Изображение доступно по URL, тип файла - jpg,png или gif\", () => {  \r",
							"    pm.sendRequest(photo.img_src, function (err, response) {\r",
							"    pm.expect(response.headers.get(\"Content-Type\")).to.match(/^image\\/(jpeg|png|gif)$/);\r",
							"    console.log(`Файл доступен по URL`);\r",
							"    });\r",
							"  });\r",
							"  // Test 5: Проверяем статус-код HTTP-ответа, чтобы убедиться, что он равен 200\r",
							"  pm.test(\"Статус-код равен 200\", () => {\r",
							"    pm.response.to.have.status(200);\r",
							"    console.log(`Статус код 200`);\r",
							"  });\r",
							"}); \r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
